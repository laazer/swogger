<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/left_item"
            android:text="Left Item"
            android:layout_marginLeft="@dimen/fss_margin_from_edge"
            android:textSize="@dimen/basic_list_item_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/right_item"
            android:text="Right Item"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/fss_margin_from_edge"
            android:textSize="@dimen/basic_list_item_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</FrameLayout>